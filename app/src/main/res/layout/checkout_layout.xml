<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@drawable/border_gray">

    <!-- https://stackoverflow.com/questions/12059328/android-imageview-fit-width-->
    <ImageView
        android:id="@+id/cartImgId"
        android:layout_width="66.7dp"
        android:layout_height="66.7dp"
        android:layout_marginLeft="16.7dp"
        android:layout_marginRight="19.7dp"
        android:layout_marginTop="16.7dp"
        android:layout_marginBottom="17dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:layout_marginTop="16.7dp">

        <TextView
            android:id="@+id/cartBookTitle"
            android:layout_width="193dp"
            android:layout_height="20dp"
            android:textColor="@color/brownish_gray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/cartAuthor"
            android:layout_width="133dp"
            android:layout_height="14dp"
            android:layout_marginTop="3.7dp"
            android:layout_marginBottom="7.2dp"
            android:textColor="@color/pinkish_gray"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cartPrice"
                android:layout_width="133dp"
                android:layout_height="20dp"
                android:layout_marginRight="32dp"
                android:textSize="14sp"
                android:textColor="@color/brownish_gray"/>

            <ImageButton
                android:id="@+id/down"
                android:layout_width="9.6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_down_arrow"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/cartQuantity"
                android:layout_width="29.7dp"
                android:layout_height="20dp"
                android:textColor="@color/brownish_gray"
                android:gravity="center"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/up"
                android:layout_width="9.6dp"
                android:layout_height="6dp"
                android:src="@drawable/ic_up_arrow"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>